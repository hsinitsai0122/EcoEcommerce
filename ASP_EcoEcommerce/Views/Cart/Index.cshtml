@model IEnumerable<ASP_EcoEcommerce.Models.CartListItemViewModel>

@{
    ViewData["Title"] = "Orders";
}

<h1>Order List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-pill">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id_Cart }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id_Cart }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_Cart })
            </td>
        </tr>
}
    </tbody>
</table>
