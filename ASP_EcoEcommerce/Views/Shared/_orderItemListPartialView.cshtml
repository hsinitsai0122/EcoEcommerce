@model IEnumerable<ASP_EcoEcommerce.Models.OrderItemListItemViewModel>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                Product Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.Id_Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_Cart)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (ViewBag.MediaUrl.ContainsKey(item.Id_Product))
                {
                    <img src="@Url.Content("~/assets/" + ViewBag.MediaUrl[item.Id_Product])" alt="Product Image" class="image-index" />

                }
                else
                {

                    <img src="@Url.Content("~/assets/placeholderImageIndex.png")" alt="Placeholder Image" class="image-index" />
                }
            </td>

            <td>
                    @{
                        if (ViewBag.ProductName.ContainsKey(item.Id_Product))
                    {
                        <text>@ViewBag.ProductName[item.Id_Product]</text>

                    }
                    else
                    {
                        <text>Product Not Found</text>
                    }
                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.Id_Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Cart)
            </td> *@
            <td>
                    @Html.ActionLink("Edit", "Edit", "OrderItem", new { id = item.Id_OrderItem },null) |
                    @Html.ActionLink("Details", "Details", "OrderItem", new { id = item.Id_OrderItem }, null) |
                    @Html.ActionLink("Delete", "Delete", "OrderItem", new { id = item.Id_OrderItem }, null)

            </td>
        </tr>
}
    </tbody>
</table>

